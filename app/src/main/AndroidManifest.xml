<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.idonans.offline">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.idonans.offline.app.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.idonans.offline.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.idonans.offline.FunctionsActivity"/>
        <activity android:name="com.idonans.offline.joke.JokeActivity"/>
        <activity android:name="com.idonans.offline.news.NewsListActivity"/>
        <activity android:name="com.idonans.offline.news.NewsDetailActivity"/>
        <activity android:name="com.idonans.offline.share.sinaweibo.ShareSinaWeiboActivity"/>
    </application>

</manifest>